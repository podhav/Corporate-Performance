@model Corporate_Performance.Models.Files
@using Corporate_Performance.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Upload KPI Portfolio of Evidence</h2>
<br />

<form method=post asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="File" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="File" accept=".xlsx,.xls,image/*,.doc, .docx,.txt,.pdf" 
                   type="file" multiple name="files" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_CreateAndBackToListButton" />
        </div>
    </div>
</form>


