@model Files

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete upload</h1>

<br />
<h2 class="text-info">Delete File Uploaded</h2>
<br />

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <fieldset disabled>
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class=" form-group row">
            <div class=" col-sm-2">
                <label asp-for="FileName" class=" col-form-label"></label>
            </div>
            <div class=" col-sm-5">
                <input asp-for="FileName" class="form-control" />
            </div>
        </div>
        <div class=" form-group row">
            <div class=" col-sm-2">
                <label asp-for="FileType" class=" col-form-label"></label>
            </div>
            <div class=" col-sm-5">
                <input asp-for="FileType" class="form-control" />
            </div>
        </div>
        <div class=" form-group row">
            <div class=" col-sm-2">
                <label asp-for="CreatedOn" class=" col-form-label"></label>
            </div>
            <div class=" col-sm-5">
                <input asp-for="CreatedOn" class="form-control" />
            </div>
        </div>
    </fieldset>
    <div class="form-group row">
        <div class="col-sm-5 offset-2">
            <partial name="_DeleteAndBackToListButton" model="Model.Id" />
        </div>
    </div>
</form>