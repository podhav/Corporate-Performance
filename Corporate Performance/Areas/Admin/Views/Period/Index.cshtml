@model IEnumerable<Period>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col 6">
        <h2 class="text-info">List of KPI Periods</h2>
    </div>
    <div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(p => p.Quarter)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.QrtStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.QrtEndDate)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(P => item.Quarter)
            </td>
            <td>
                @Html.DisplayFor(P => item.QrtStartDate)
            </td>
            <td>
                @Html.DisplayFor(P => item.QrtEndDate)
            </td>

            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <p>No Periods exist.... </p>
    }
</div>

