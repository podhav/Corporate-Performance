@model IEnumerable<KPI>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col 6">
        <h2 class="text-info">List of KPI's</h2>
    </div>
    <div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(p => p.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.Programme.Name)
                </th>

                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(P => item.Name)
            </td>
            <td>
                @Html.DisplayFor(P => item.Programme.Name)
            </td>
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <p>No KPI exists..... </p>
    }
</div>



