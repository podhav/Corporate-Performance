@model Corporate_Performance.Models.ViewModels.KPIandProgrammeModel
@using Corporate_Performance.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Create KPI</h2>
<br />

<partial name="_StatusMessage" model="Model.StatusMessage"/>

<form method=post asp-action="Create">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="KPI.ProgrammeId" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <select asp-for="KPI.ProgrammeId" asp-items="Model.ProgrammeList.ToSelectListItem(Model.KPI.ProgrammeId)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="KPI.Name" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="KPI.Name" class="form-control" />
        </div>
        <span asp-validation-for="KPI.Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_CreateAndBackToListButton" />
        </div>
    </div>
</form>


