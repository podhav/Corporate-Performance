@model IEnumerable<Performance>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="row">
    <div class="col 6">
        <h2 class="text-info">List of Performance KPI's</h2>
    </div>
    <div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(p => p.Fiscal)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.KPA)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.KPI)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.Programme)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.Period.Quarter)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.QrtTarget)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.QrtActual)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.QrtDeviation)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.AnnualTarget)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.AnnualActual)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.AnnualDeviation)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.CorrectiveAction)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.Comments)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.Files)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(P => item.Fiscal)
            </td>
            <td>
                @Html.DisplayFor(P => item.KPA)
            </td>
            <td>
                @Html.DisplayFor(P => item.Programme)
            </td>
            <td>
                @Html.DisplayFor(P => item.Period.Quarter)
            </td>
            <td>
                @Html.DisplayFor(P => item.QrtTarget)
            </td>
            <td>
                @Html.DisplayFor(P => item.QrtActual)
            </td>
            <td>
                @Html.DisplayFor(P => item.QrtDeviation)
            </td>
            <td>
                @Html.DisplayFor(P => item.AnnualTarget)
            </td>
            <td>
                @Html.DisplayFor(P => item.AnnualActual)
            </td>
            <td>
                @Html.DisplayFor(P => item.AnnualDeviation)
            </td>
            <td>
                @Html.DisplayFor(P => item.CorrectiveAction)
            </td>
            <td>
                @Html.DisplayFor(P => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(P => item.Files)
            </td>


            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <p>No Performance KPI exists..... </p>
    }
</div>



