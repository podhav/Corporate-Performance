@model Corporate_Performance.Models.ViewModels.PerformanceViewModel
@using Corporate_Performance.Extensions
@{
    ViewData["Title"] = "Create KPI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Create New Performance KPI</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Fiscal" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <select asp-for="Performance.FiscalId" id="FiscalId" asp-items=@(new SelectList(Model.Fiscal,"Id","FiscalYear")) class="form-control"></select>
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.KPA" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <select asp-for="Performance.KPAId" id="KPAId" asp-items="Model.KPA.OrderBy(x=>x.Name).ToSelectListItem(Model.Performance.KPAId)" class="form-control"></select>
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.KPI" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <select asp-for="Performance.KPIId" id="KPIId" asp-items="Model.KPI.OrderBy(x=>x.Name).ToSelectListItem(Model.Performance.KPIId)" class="form-control bg-light"></select>
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Qrt1Target" class="col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.Qrt1Target" class="form-control col-5" type="text" />
        </div>
        <span asp-validation-for="Performance.Qrt1Target" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Qrt2Target" class="col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.Qrt2Target" class="form-control col-5" type="text" />
        </div>
        <span asp-validation-for="Performance.Qrt2Target" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Qrt3Target" class="col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.Qrt3Target" class="form-control col-5" type="text" />
        </div>
        <span asp-validation-for="Performance.Qrt3Target" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Qrt4Target" class="col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.Qrt4Target" class="form-control col-5" type="text" />
        </div>
        <span asp-validation-for="Performance.Qrt4Target" class="text-danger"></span>
    </div>
   
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.AnnualTarget" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.AnnualTarget" class="form-control col-5" type="text" />
        </div>
        <span asp-validation-for="Performance.AnnualTarget" class="text-danger"></span>
    </div>    
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Comments" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            @Html.TextAreaFor(p => p.Performance.Comments)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_CreateAndBackToListButton" />
        </div>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
