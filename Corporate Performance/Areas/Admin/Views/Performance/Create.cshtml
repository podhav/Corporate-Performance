@model Corporate_Performance.Models.ViewModels.PerformanceViewModel
@using Corporate_Performance.Extensions
@{
    ViewData["Title"] = "Create KPI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Create New Performance KPI</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Fiscal" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <select asp-for="Performance.Id" id="FiscalId" asp-items=@(new SelectList(Model.Fiscal,"Id","FiscalYear")) class="form-control"></select>
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.KPAId" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <select asp-for="Performance.KPAId" id="KPAId" asp-items="Model.KPA.ToSelectListItem(Model.Performance.KPAId)" class="form-control"></select>
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.KPI" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <select asp-for="Performance.KPI" id="KPIId" asp-items="Model.KPI.ToSelectListItem(Model.Performance.KPIId)" class="form-control"></select>
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Period.Quarter" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <select asp-for="Performance.PeriodId" asp-items="@(new SelectList(Model.Period, "Id", "Quarter"))" class="form-control col-5"></select>
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.QrtTarget" class="col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.QrtTarget" class="form-control col-5" type="text"/>
        </div>
        <span asp-validation-for="Performance.QrtTarget" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.QrtActual" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.QrtActual" class="form-control col-5" type="text"/>
        </div>
        <span asp-validation-for="Performance.QrtActual" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.QrtDeviation" class="col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.QrtDeviation" class="form-control col-5" type="text"/>
        </div>
        <span asp-validation-for="Performance.QrtDeviation" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.AnnualTarget" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.AnnualTarget" class="form-control col-5" type="text" />
        </div>
        <span asp-validation-for="Performance.AnnualTarget" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.AnnualActual" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.AnnualActual" class="form-control col-5" type="text" />
        </div>
        <span asp-validation-for="Performance.AnnualTarget" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.AnnualDeviation" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <Input asp-for="Performance.AnnualDeviation" class="form-control col-5" type="text"  />
        </div>
        <span asp-validation-for="Performance.AnnualDeviation" class="text-danger"></span>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.CorrectiveAction" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            @Html.TextAreaFor(p => p.Performance.CorrectiveAction)
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Files" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            <input type="file" name="files" multiple class=" form-control" />
        </div>
    </div>
    <div class=" form-group row">
        <div class=" col-2">
            <label asp-for="Performance.Comments" class=" col-form-label"></label>
        </div>
        <div class=" col-5">
            @Html.TextAreaFor(p => p.Performance.Comments)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_CreateAndBackToListButton" />
        </div>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}